<!DOCTYPE html>
<html>
    <head>
        <script>
            function pic(param) {
            var img = document.getElementById("img");
            img.src = param.getAttribute("data-img");
          }
          </script>
        <title>Happy Holidays</title>
    </head>
    <body>
        <main>
            <input type="button" value="Christmas" data-img="./christmas.png" onclick="pic(this)" />
            <input type="button" value="Halloween" data-img="./halloween.jpg" onclick="pic(this)" />
            <input type="button" value="Easter" data-img="./easter.png" onclick="pic(this)" />
  <br>
    <p>
        <img src="" id="img" style="height:300px;" />
    </p>
</main>
</body>
</html>